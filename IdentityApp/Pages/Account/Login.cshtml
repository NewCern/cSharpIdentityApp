@page
@model IdentityApp.Pages.Account.LoginModel
@{
}

<div class="container border" style="padding:20px" >
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Credential.UserName"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Credential.UserName" class="form-control" />
                <span asp-validation-for="Credential.UserName" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Credential.Password"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Credential.Password" class="form-control" />
                <span asp-validation-for="Credential.Password" class="alert-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <input type="submit" class="btn btn-primary" value="Login"/>
            </div>
            <div class="col-5">
            </div>
        </div>
    </form>
</div>